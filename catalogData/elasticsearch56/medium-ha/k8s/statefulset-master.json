{
  "kind": "StatefulSet",
  "apiVersion": "apps/v1beta1",
  "metadata": {
    "name": "$idx_and_short_serviceid-master",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP",
      "component": "master"
    }
  },
  "spec": {
    "serviceName": "$idx_and_short_serviceid-master",
    "replicas": 3,
    "selector": {
      "matchLabels" : {
        "service_id": "$service_id",
        "idx_and_short_serviceid": "$idx_and_short_serviceid",
        "component": "master"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP",
          "component": "master"
        }
      },
      "spec": {
        "serviceAccountName": "$idx_and_short_serviceid",
        "affinity": {
          "podAntiAffinity": {
            "requiredDuringSchedulingIgnoredDuringExecution": [
              {
                "topologyKey": "kubernetes.io/hostname",
                "labelSelector": {
                  "matchLabels": {
                    "idx_and_short_serviceid": "$idx_and_short_serviceid",
                    "component": "master"
                  }
                }
              }
            ]
          }
        },
        "initContainers": [
          {
            "name": "sysctl",
            "image": "busybox",
            "imagePullPolicy": "IfNotPresent",
            "command": ["/bin/sh"],
            "args": ["-c", "sysctl -w vm.max_map_count=262144 && sysctl -w vm.swappiness=1"],
            "securityContext": {
              "privileged": true
            }
          },
          {
            "name": "chown",
            "image": "jmcarp/k8s-elasticsearch:5.6.5",
            "imagePullPolicy": "IfNotPresent",
            "command": [
              "/bin/bash",
              "-c",
              "chown -R elasticsearch:elasticsearch /usr/share/elasticsearch/data && chown -R elasticsearch:elasticsearch /usr/share/elasticsearch/logs"
            ],
            "volumeMounts": [
              {
                "name": "data",
                "mountPath": "/usr/share/elasticsearch/data"
              }
            ]
          }
        ],
        "containers": [
          {
            "name": "elasticsearch-proxy",
            "image": "18fgsa/k8s-nginx-elasticsearch:1.13.8",
            "ports": [
              {
                "name": "rest",
                "containerPort": 80
              }
            ],
            "env": [
              {
                "name": "AUTH_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "$short_serviceid-es-secret-keyfile",
                    "key": "password"
                  }
                }
              }
            ],
            "readinessProbe": {
              "exec": {
                "command": ["/bin/bash", "-c", "curl -f http://root:${AUTH_PASSWORD}@localhost/_cluster/health?local"]
              }
            },
            "imagePullPolicy": "IfNotPresent"
          },
          {
            "name": "elasticsearch-master",
            "image": "18fgsa/k8s-elasticsearch:5.6.5",
            "securityContext": {
              "capabilities": {
                "add": ["IPC_LOCK", "SYS_RESOURCE"]
              }
            },
            "resources": {
              "requests": {
                "memory": "1792M",
                "cpu": "0"
              },
              "limits": {
                "memory": "3584M",
                "cpu": 1
              }
            },
            "ports": [
              {
                "name": "transport",
                "containerPort": 9300
              },
              {
                "name": "http",
                "containerPort": 9200
              }
            ],
            "env": [
              {
                "name": "DISCOVERY_SERVICE",
                "value": "$idx_and_short_serviceid-master.default.svc.cluster.local"
              },
              {
                "name": "NODE_DATA",
                "value": "false"
              },
              {
                "name": "PROCESSORS",
                "valueFrom": {
                  "resourceFieldRef": {
                    "resource": "limits.cpu"
                  }
                }
              },
              {
                "name": "ES_JAVA_OPTS",
                "value": "-Djava.net.preferIPv4Stack=true -Xms1792m -Xmx1792m"
              },
              {
                "name": "NUMBER_OF_SHARDS",
                "value": "3"
              },
              {
                "name": "NUMBER_OF_REPLICAS",
                "value": "2"
              },
              {
                "name": "MANAGED_BY",
                "value": "TAP"
              }
            ],
            "volumeMounts": [
              {
                "name": "data",
                "mountPath": "/usr/share/elasticsearch/data"
              }
            ],
            "imagePullPolicy": "IfNotPresent",
            "lifecycle": {
              "postStart": {
                "exec": {
                  "command": ["/setup-shards.sh"]
                }
              }
            }
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    },
    "volumeClaimTemplates": [
      {
        "metadata": {
          "name": "data"
        },
        "spec": {
          "accessModes": ["ReadWriteOnce"],
          "storageClassName": "$storage_class",
          "resources": {
            "requests": {
              "storage": "1Gi"
            }
          }
        }
      }
    ]
  }
}
