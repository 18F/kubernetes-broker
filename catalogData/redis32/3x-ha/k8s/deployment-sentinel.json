{
  "apiVersion": "apps/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "$idx_and_short_serviceid-sentinel",
    "labels": {
      "component": "sentinel",
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id-sentinel",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP"
    }
  },
  "spec": {
    "replicas": 3,
    "serviceName": "$idx_and_short_serviceid-sentinel",
    "selectors": {
      "matchLabels": {
        "component": "sentinel",
        "service_id": "$service_id",
        "idx_and_short_serviceid": "$idx_and_short_serviceid"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "component": "sentinel",
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP"
        }
      },
      "spec": {
        "initContainers": [
          {
            "name": "redis32-sentinel",
            "image": "18fgsa/redis32-sentinel:latest",
            "volumeMounts": [
              {
                "name": "opt",
                "mountPath": "/opt"
              }
            ]
          }
        ],
        "containers": [
          {
            "args": [
              "/opt/sentinel.conf"
            ],
            "command": [
              "/opt/bin/k8s-redis-ha-sentinel"
            ],
            "env": [
              {
                "name": "SERVICE",
                "value": "$idx_and_short_serviceid-sentinel"
              },
              {
                "name": "SERVICE_PORT",
                "value": "redis-server"
              },
              { "name": "MANAGED_BY", "value":"TAP" },
              { "name": "REDIS_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "$short_serviceid-redis-ha-credentials",
                    "key": "redis-password"
                  }
                }
              }
            ],
            "image": "redis:3.2",
            "name": "redis-sentinel",
            "ports": [
              {
                "containerPort": 26379,
                "name": "redis-sentinel"
              }
            ],
            "readinessProbe": {
              "exec": {
                "command": [
                  "redis-cli",
                  "-p",
                  "26379",
                  "info",
                  "server"
                ]
              }
            },
            "volumeMounts": [
              {
                "name": "opt",
                "mountPath": "/opt"
              }
            ]
          }
        ],
        "volumes": [
          {
            "emptyDir": {},
            "name": "opt"
          }
        ]
      }
    }
  }
}
