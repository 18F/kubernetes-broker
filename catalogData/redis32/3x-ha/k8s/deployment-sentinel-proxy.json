{
  "apiVersion": "apps/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "$idx_and_short_serviceid-proxy",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "matchLabels": {
        "component": "proxy",
        "service_id": "$service_id",
        "idx_and_short_serviceid": "$idx_and_short_serviceid"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "component": "proxy",
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "LISTEN_ADDRESS",
                "value": ":6379"
              },
              {
                "name": "SENTINEL_ADDRESS",
                "value": "redis-sentinel.default:26379"
              },
              {
                "name": "REDIS_MASTER_NAME",
                "value": "primaryserver"
              }
            ],
            "image": "18fgsa/redis32-proxy:latest",
            "imagePullPolicy": "Always",
            "name": "redis32-proxy",
            "ports": [
              {
                "containerPort": 6379
              }
            ]
          }
        ]
      }
    }
  }
}
