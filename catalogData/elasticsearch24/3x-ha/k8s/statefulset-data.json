{
  "kind": "StatefulSet",
  "apiVersion": "apps/v1beta1",
  "metadata": {
    "name": "$idx_and_short_serviceid",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP",
      "component": "data"
    }
  },
  "spec": {
    "serviceName": "$idx_and_short_serviceid",
    "replicas": 3,
    "selector": {
      "matchLabels" : {
        "service_id": "$service_id",
        "idx_and_short_serviceid": "$idx_and_short_serviceid",
        "component": "data"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP",
          "component": "data"
        }
      },
      "spec": {
        "serviceAccountName": "$idx_and_short_serviceid",
        "affinity": {
          "podAntiAffinity": {
            "requiredDuringSchedulingIgnoredDuringExecution": [
              {
                "topologyKey": "kubernetes.io/hostname",
                "labelSelector": {
                  "matchLabels": {
                    "idx_and_short_serviceid": "$idx_and_short_serviceid",
                    "component": "data"
                  }
                }
              }
            ]
          }
        },
        "initContainers": [
          {
            "name": "sysctl",
            "image": "busybox",
            "imagePullPolicy": "Always",
            "command": ["sysctl", "-w", "vm.max_map_count=262144"],
            "securityContext": {
              "privileged": true
            }
          }
        ],
        "containers": [
          {
            "name": "elasticsearch-data",
            "image": "jmcarp/elasticsearch-pet:latest",
            "resources": {
              "requests": {
                "memory": "1792M",
                "cpu": "0"
              },
              "limits": {
                "memory": "3584M",
                "cpu": 1
              }
            },
            "readinessProbe": {
              "exec": {
                "command": ["curl", "-f", "http://127.0.0.1:9200/_cluster/health?local"]
              },
              "initialDelaySeconds": 60,
              "timeoutSeconds": 15,
              "periodSeconds": 60,
              "successThreshold": 1,
              "failureThreshold": 4
            },
            "ports": [
              {
                "name": "transport",
                "containerPort": 9300
              }
            ],
            "env": [
              {
                "name": "AUTH_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "$short_serviceid-es-secret-keyfile",
                    "key": "password"
                  }
                }
              },
              {
                "name": "SERVICE",
                "value": "$idx_and_short_serviceid-discovery"
              },
              {
                "name": "KUBERNETES_MASTER",
                "value": "kubernetes.default.svc.cluster.local"
              },
              {
                "name": "KUBERNETES_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "NODE_MASTER",
                "value": "false"
              },
              {
                "name": "PROCESSORS",
                "valueFrom": {
                  "resourceFieldRef": {
                    "resource": "limits.cpu"
                  }
                }
              },
              {
                "name": "ES_JAVA_OPTS",
                "value": "-Djava.net.preferIPv4Stack=true -Xms1792m -Xmx1792m"
              },
              {
                "name": "MANAGED_BY",
                "value":"TAP"
              }
            ],
            "volumeMounts": [
              {
                "name": "data",
                "mountPath": "/usr/share/elasticsearch/data"
              }
            ],
            "lifecycle": {
              "preStop": {
                "exec": {
                  "command": ["/bin/bash", "/pre-stop-hook.sh"]
                }
              }
            },
            "imagePullPolicy": "Always"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    },
    "volumeClaimTemplates": [
      {
        "metadata": {
          "name": "data"
        },
        "spec": {
          "accessModes": ["ReadWriteOnce"],
          "storageClassName": "$storage_class",
          "resources": {
            "requests": {
              "storage": "10Gi"
            }
          }
        }
      }
    ]
  }
}
