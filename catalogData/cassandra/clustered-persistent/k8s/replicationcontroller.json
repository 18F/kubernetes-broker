{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "$idx_and_short_serviceid",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP"
    }
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid"
    },
    "template": {
      "metadata": {
        "labels": {
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP"
        }
      },
      "spec": {
        "serviceAccountName": "$idx_and_short_serviceid",
        "containers": [
          {
            "name": "k-cassandra21",
            "image": "gcr.io/google-samples/cassandra:v8",
            "command": ["/run.sh"],
            "ports": [
              {
                "containerPort": 9042,
                "protocol": "TCP",
                "name": "cql"
              },
              {
                "containerPort": 9160,
                "protocol": "TCP",
                "name": "thrift"
              }
            ],
            "volumneMounts": [
              {
                "mounthPath": "/var/lib/cassandra/data",
                "name": "data"
              }
            ],
            "env": [
              { "name": "MANAGED_BY", "value":"TAP" },
              { "name": "MAX_HEAP_SIZE",   "value": "512M" },
              { "name": "HEAP_NEWSIZE",   "value": "100M" },
              { "name": "CASSANDRA_PASSWORD",   "value": "$random1" },
              { "name": "CASSANDRA_USERNAME",   "value": "$random2" },
              { "name": "CASSANDRA_SERVICE",   "value": "$idx_and_short_serviceid" },
              { "name": "POD_NAMESPACE", "valueFrom": { "fieldRef": { "apiVersion": "v1", "fieldPath": "metadata.namespace" } } }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "volumes": [
          {
            "name": "data",
            "persistentVolumeClaim": {
              "claimName": "$idx_and_short_serviceid"
            }
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}