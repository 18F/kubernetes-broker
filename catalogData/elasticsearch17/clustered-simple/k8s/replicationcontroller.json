{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "$idx_and_short_serviceid",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP"
    }
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid"
    },
    "template": {
      "metadata": {
        "labels": {
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "k-elasticsearch17-clustered",
            "image": "quay.io/pires/docker-elasticsearch-kubernetes:1.7.1-4",
            "resources": {
              "limits": {
                "memory": "500M"
              },
              "requests": {
                "memory": "100M"
              }
            },
            "livenessProbe": {
              "exec": {
                "command": [ "/bin/sh", "-c", "/usr/bin/wget http://localhost:9200/_cluster/health?pretty -q -O - | /bin/grep cluster_name" ]
              },
              "initialDelaySeconds": 60,
              "timeoutSeconds": 15,
              "periodSeconds": 60,
              "successThreshold": 1,
              "failureThreshold": 4

            },
            "ports": [
              {
                "containerPort": 9200,
                "protocol": "TCP"
              },
              {
                "containerPort": 9300,
                "protocol": "TCP"
              }
            ],
            "env": [
              { "name": "MANAGED_BY", "value":"TAP" },

              { "name": "KUBERNETES_CA_CERTIFICATE_FILE",   "value": "/var/run/secrets/kubernetes.io/serviceaccount/ca.crt" },
              { "name": "NAMESPACE", "valueFrom": { "fieldRef": { "apiVersion": "v1", "fieldPath": "metadata.namespace" } } },
              { "name": "CLUSTER_NAME",   "value": "$random3" },
              { "name": "DISCOVERY_SERVICE",   "value": "$idx_and_short_serviceid" },
              { "name": "NODE_MASTER",   "value": "true" },
              { "name": "NODE_DATA",   "value": "true" },

              { "name": "USERNAME",   "value": "$random1" },
              { "name": "PASSWORD",   "value": "$random2" },
              { "name": "DBNAME",     "value": "$random3" }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}
