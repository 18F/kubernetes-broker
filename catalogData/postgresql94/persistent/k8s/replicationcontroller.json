{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "$idx_and_short_serviceid",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid"
    },
    "template": {
      "metadata": {
        "labels": {
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP"
        }
      },
      "spec": {
        "imagePullSecrets": [
          {
            "name": "private-tap-repo-secret"
          }
        ],
        "containers": [
          {
            "name": "k-persistent-postgresql94",
            "image": "quay.io/trustedanalytics/postgresql:9.4",
            "ports": [
              {
                "containerPort": 5432,
                "protocol": "TCP"
              }
            ],
            "volumeMounts": [
              {
                "name": "postgres-persistent-storage",
                "mountPath": "/var/lib/postgresql/"
              }
            ],
            "env": [
              { "name": "MANAGED_BY", "value":"TAP" },
              { "name": "POSTGRES_USER",   "value": "$random1" },
              { "name": "POSTGRES_PASSWORD",   "value": "$random2" },
              { "name": "POSTGRES_DB",     "value": "$random3" }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "volumes": [
          {
            "name": "postgres-persistent-storage",
            "persistentVolumeClaim": {
              "claimName": "$idx_and_short_serviceid"
            }
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}