{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "$idx_and_short_serviceid-node0",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid-node0",
      "managed_by": "TAP",
      "instance": "node0"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid-node0"
    },
    "template": {
      "metadata": {
        "labels": {
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid-node0",
          "managed_by": "TAP",
          "instance": "node0"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "mongo-secret-volume",
            "secret": {
              "secretName": "$idx_and_short_serviceid-mongo-secret-keyfile"
            }
          }
        ],
        "containers": [
          {
            "name": "mongo-node2",
            "image": "frodenas/mongodb:3.0",
            "command": ["/bin/sh"],
            "args": ["-c", "chmod 600 /etc/mongo-secret-volume/keyfile && /scripts/run.sh --replSet replica --keyFile /etc/mongo-secret-volume/keyfile"],
            "ports": [
              {
                "containerPort": 27017,
                "protocol": "TCP"
              }
            ],
            "env": [
              { "name": "MANAGED_BY", "value":"TAP" },
              { "name": "MONGODB_PASSWORD",   "value": "$random1" },
              { "name": "MONGODB_USERNAME",   "value": "$random2" },
              { "name": "MONGODB_DBNAME",   "value": "admin" },
              { "name": "MONGODB_REPLICA_NAME",   "value": "replica" },
              { "name": "MONGODB_ROLE",   "value": "root" }
            ],
            "volumeMounts": [
              {
                "name": "mongo-secret-volume",
                "readOnly": false,
                "mountPath": "/etc/mongo-secret-volume"
              }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}