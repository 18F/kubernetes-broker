{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "container-broker"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "id": "container-broker"
    },
    "template": {
      "metadata": {
        "labels": {
          "id": "container-broker"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "container-broker",
            "image": "tap/container_broker",
            "ports": [
              {
                "containerPort": 8081,
                "protocol": "TCP"
              }
            ],
            "env": [
              { "name": "CONTAINER_BROKER_PORT", "value":"8081" },
              { "name": "CONTAINER_BROKER_USER", "value":"admin" },
              { "name": "CONTAINER_BROKER_PASS", "value":"password" },
              { "name": "CONTAINER_BROKER_SSL_ACTIVE", "value":"false" },
              { "name": "CONTAINER_BROKER_SSL_CERT_FILE_LOCATION", "value":"" },
              { "name": "CONTAINER_BROKER_SSL_KEY_FILE_LOCATION", "value":"" },
              { "name": "TEMPLATE_REPOSITORY_KUBERNETES_SERVICE_NAME", "value":"TEMPLATE_REPOSITORY" },
              { "name": "TEMPLATE_REPOSITORY_USER", "value":"admin" },
              { "name": "TEMPLATE_REPOSITORY_PASS", "value":"password" },
              { "name": "TEMPLATE_REPOSITORY_SSL_ACTIVE", "value":"false" },
              { "name": "TEMPLATE_REPOSITORY_SSL_CERT_FILE_LOCATION", "value":"" },
              { "name": "TEMPLATE_REPOSITORY_SSL_KEY_FILE_LOCATION", "value":"" },
              { "name": "TEMPLATE_REPOSITORY_SSL_CA_FILE_LOCATION", "value":"" },
              { "name": "INSECURE_SKIP_VERIFY", "value":"true" },
              { "name": "BROKER_LOG_LEVEL", "value":"DEBUG" }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}